<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lulius.movieslist.ChooseActivity"
        android:background="@color/gray_cool">


    <Button
        
        android:textColor="#0e2038"
		android:textSize="18sp"
		android:layout_marginTop="5dp"
		android:layout_marginRight="15dp"
		android:layout_width="120dp"
		android:layout_height="40dp"
		android:background="@drawable/button_shape"

        android:id="@+id/button1CreateMovie"
        android:text="@string/btn_choose_create" />

    <Button
        android:textColor="#0e2038"
		android:textSize="18sp"
		android:layout_marginTop="5dp"
				android:layout_marginRight="15dp"
		
		android:layout_width="120dp"
		android:layout_height="40dp"
		android:background="@drawable/button_shape"
         android:id="@+id/button2FindMovie"
        android:text="@string/btn_choose_find" />

</LinearLayout>